{
    "id": "https://almanak.github.io/schemas/resource.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Resource",
    "description": "Basis-skema for alle ressourcer. Udvidelse af base.json",
    "_index": {
        "facetProperties": ["uuid",  "id", "type", "schema"],
        "fulltextProperties": ["description"],
        "autocompleteProperties": ["label"],
    },
    "_view": {
        "propertyOrder": [""],
        "readonly": ["type", "schema"]
    },
    "allOf": [
        {
            "$ref": "https://almanak.github.io/schemas/base.json"
        },
        {
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["record", "person", "organisation", "family", "event", "place", "concept", "thing"],
                    "title": "Resourcetype"
                },
                "schema": {
                    "type": "string",
                    "title": "Skema",
                    "description": "Hvilket jsonskema bruges til oprettelse, opdatering og validering af denne ressource"
                }
            }
        }
    ]
}
