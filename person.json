{
    "id": "person",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Person",
    "description": "En person-entitet",
    "type": "object",
    "properties": {
        "display_name": {
            "type": "string",
            "maxLength": 255,
            "title": "Displaynavn",
            "description": "Den streng, som entiteten repræsenteres med"
        },
        "description": {
            "type": "string",
            "maxLength": 5000,
            "title": "Beskrivelse"
        },
        "sources": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "title": "Kilder",
            "description": "URL-links eller enkeltlinje referencer"
        },
        "portrait": {
            "type": "string",
            "maxLength": 255,
            "format": "uri",
            "title": "Portræt"
        },
    	"firstnames": {
    		"type": "array",
            "items": {
                "type": "string",
                "maxLength": 255
            },
    		"description": "Alle fornavne i korrekt rækkefølge",
            "title": "Fornavne"
   		},
        "birthname": {
            "type": "string",
            "title": "Pigenavn (født)",
            "description": "Det eller de efternavne som vedkommende havde før giftemål.",
            "maxLength": 255
        },
    	"lastnames": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "title": "Mellem- og efternavne",
            "description": "Alle nuværende mellem og efternavne i korrekt rækkefølge"
        },
    	"gender": {
    		"type": "string",
    		"enum": ["mand", "kvinde", "ukendt"],
    		"title": "Køn"
   		},
    	"occupation": {
    		"type": "array",
    		"items": {
    			"type": "string",
                "maxLength": 255
  			},
    		"uniqueItems": true,
    		"title": "Erhverv"
   		},
    	"from_date": {
    		"type": "string",
            "format": "date",
            "maxLength": 255,
    		"title": "Fødselsdato (åååå-mm-dd)",
            "pattern": "^([0-9]{4})(-([0-9]{2}))?(-([0-9]{2}))?$"
        },
    	"place_of_birth": {
    		"type": "string",
    		"maxLength": 255,
    		"title": "Fødselssted"
    	},
    	"to_date": {
    		"type": "string",
            "format": "date",
            "maxLength": 255,
    		"title": "Dødsdato (åååå-mm-dd)",
            "pattern": "^([0-9]{4})(-([0-9]{2}))?(-([0-9]{2}))?$"
    	},
    	"place_of_death": {
    		"type": "string",
    		"maxLength": 255,
    		"title": "Dødssted"
    	}
    }
}