{
    "id": "https://almanak.github.io/schemas/people-total.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "people",
    "description": "Basis-schema for all resources. Do not use on its own. Extended by domain-schemas.",
    "type": "object",
    "_meta": {
        "indexProperties": ["id", "domain", "schema", "from_date", "to_date"],
        "systemProperties": ["uuid", "id", "domain", "schema", "created", "created_by", "updated", "updated_by"],
        "fulltextProperties": ["description"],
        "autocompleteProperties": ["label"],
        "viewProperties": [
            "label", "firstnames", "birthname", "lastnames", "gender", "occupation", "sources", "from_date",
            "place_of_birth", "to_date", "place_of_death", "description", "sources", "portrait", "ext_data"
        ]
    },
    "required": [],
    "properties": {
        "uuid": {
            "type": "string",
            "title": "Universal unique identifier",
            "description": "UUID1. Assigned by system",
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}"
        },
        "id": {
            "type": "string",
            "title": "Resourcespecifik ID",
            "description": "9-cifret løbenummer semi-specifik for resourcetypen. Assigned by system",
            "maxLength": 9,
            "pattern": "^[0-9]{9}$"
        },
        "domain": {
            "type": "string",
            "enum": ["records", "people", "organisations", "families", "events", "places", "concepts", "things"],
            "title": "Resourcetype",
            "description": "Sættes kun når der vælges skema til oprettelse. Ellers fastsat."
        },
        "schema": {
            "type": "string",
            "title": "Skema",
            "description": "Sæætes kun når der vælges skema til oprettelse. Ellers fastsat."
        },
        "created": {
            "type": "string",
            "format": "date-time",
            "title": "Skabt",
            "description": "Datetime for skabelse af metadata-ressourcen"
        },
        "created_by": {
            "type": "string",
            "maxLength": 255,
            "title": "Skabt af",
            "description": "Brugernavn/ID på skaber/oploader af metadata-ressourcen",
            "_readonly": true
        },
        "updated": {
            "type": "string",
            "format": "date-time",
            "title": "Senest opdateret",
            "description": "Datetime for seneste opdatering af ressourcen",
            "_readonly": true
        },
        "updated_by": {
            "type": "string",
            "maxLength": 255,
            "title": "Senest opdateret af",
            "description": "Brugernavn på seneste opdaterer af metadata-ressourcen",
            "_readonly": true
        },
        "status": {
            "type": "string",
            "enum": ["validated", "machine-generated", "user-generated"],
            "title": "Status",
            "default": "user-generated"
        },
        "label": {
            "type": "string",
            "maxLength": 255,
            "title": "Displaynavn",
            "description": "Den streng, som entiteten repræsenteres med"
        },
        "description": {
            "type": "string",
            "maxLength": 5000,
            "title": "Beskrivelse"
        },
        "sources": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "title": "Kilder",
            "description": "URL-links eller enkeltlinje referencer"
        },
        "portrait": {
            "type": "string",
            "maxLength": 255,
            "format": "uri",
            "title": "Portræt"
        },
        "firstnames": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "description": "Alle fornavne i korrekt rækkefølge",
            "title": "Fornavne"
        },
        "birthname": {
            "type": "string",
            "title": "Pigenavn (født)",
            "description": "Det eller de efternavne som vedkommende havde før giftemål.",
            "maxLength": 255
        },
        "lastnames": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "title": "Mellem- og efternavne",
            "description": "Alle nuværende mellem og efternavne i korrekt rækkefølge"
        },
        "gender": {
            "type": "string",
            "enum": ["mand", "kvinde", "ukendt"],
            "title": "Køn",
            "description": "Selvforklarende"
        },
        "occupation": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "uniqueItems": true,
            "title": "Erhverv"
        },
        "from_date": {
            "type": "string",
            "format": "date",
            "maxLength": 255,
            "title": "Fødselsdato (åååå-mm-dd)",
            "pattern": "^([0-9]{4})(-([0-9]{2}))?(-([0-9]{2}))?$"
        },
        "place_of_birth": {
            "type": "string",
            "maxLength": 255,
            "title": "Fødselssted"
        },
        "to_date": {
            "type": "string",
            "format": "date",
            "maxLength": 255,
            "title": "Dødsdato (åååå-mm-dd)",
            "pattern": "^([0-9]{4})(-([0-9]{2}))?(-([0-9]{2}))?$"
        },
        "place_of_death": {
            "type": "string",
            "maxLength": 255,
            "title": "Dødssted"
        },
        "ext_data": {
            "type": "object",
            "title": "Udvided metedata",
            "properties": {
                "original_id": {
                    "type": "string",
                    "maxLength": 255,
                    "title": "Originalt ID"
                },
                "place_of_education": {
                    "type": "string",
                    "maxLength": 255,
                    "title": "Uddannelsessted"
                },
                "year_of_graduation": {
                    "type": "string",
                    "pattern": "^[0-9]{4}$",
                    "title": "Uddannelsesår"
                }
            }
        }
    }
}

