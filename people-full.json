{
    "id": "https://almanak.github.io/schemas/people-total.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "people",
    "description": "Basis-schema for all resources. Do not use on its own. Extended by domain-schemas.",
    "type": "object",
    "_meta": {
        "indexProperties": ["id", "domain", "schema", "occupation", "from_date", "to_date"],
        "systemProperties": ["uuid", "id", "domain", "schema", "created", "created_by", "updated", "updated_by", "status"],
        "fulltextProperties": ["description"],
        "autocompleteProperties": ["label"]
    },
    "required": ["lastnames", "gender"],
    "properties": {
        "uuid": {
            "type": "string",
            "title": "Universal unique identifier",
            "description": "UUID1. Assigned by system",
            "pattern": "[0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12}",
            "_propertyOrder": 5000
        },
        "id": {
            "type": "string",
            "title": "Resourcespecifik ID",
            "description": "9-cifret løbenummer semi-specifik for resourcetypen. Assigned by system",
            "maxLength": 9,
            "pattern": "^[0-9]{9}$",
            "_propertyOrder": 5000
        },
        "domain": {
            "type": "string",
            "enum": ["records", "people", "organisations", "families", "events", "places", "concepts", "things"],
            "title": "Resourcetype",
            "description": "Sættes kun når der vælges skema til oprettelse. Ellers fastsat.",
            "_propertyOrder": 5000
        },
        "schema": {
            "type": "string",
            "title": "Skema",
            "description": "Sæætes kun når der vælges skema til oprettelse. Ellers fastsat.",
            "_propertyOrder": 5000
        },
        "created": {
            "type": "string",
            "format": "date-time",
            "title": "Skabt",
            "description": "Datetime for skabelse af metadata-ressourcen",
            "_propertyOrder": 5000
        },
        "created_by": {
            "type": "string",
            "maxLength": 255,
            "title": "Skabt af",
            "description": "Brugernavn/ID på skaber/oploader af metadata-ressourcen",
            "_propertyOrder": 5000
        },
        "updated": {
            "type": "string",
            "format": "date-time",
            "title": "Senest opdateret",
            "description": "Datetime for seneste opdatering af ressourcen",
            "_propertyOrder": 5000
        },
        "updated_by": {
            "type": "string",
            "maxLength": 255,
            "title": "Senest opdateret af",
            "description": "Brugernavn på seneste opdaterer af metadata-ressourcen",
            "_propertyOrder": 5000
        },
        "status": {
            "type": "string",
            "enum": ["validated", "machine-generated", "user-generated"],
            "title": "Status",
            "default": "user-generated",
            "_propertyOrder": 5000
        },
        "label": {
            "type": "string",
            "maxLength": 255,
            "title": "Displaynavn",
            "description": "Den streng, som entiteten repræsenteres med",
            "_propertyOrder": 1
        },
        "description": {
            "type": "string",
            "maxLength": 5000,
            "title": "Beskrivelse",
            "_propertyOrder": 9
        },
        "sources": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "title": "Kilder",
            "description": "URL-links eller enkeltlinje referencer",
            "_propertyOrder": 12
        },
        "portrait": {
            "type": "string",
            "maxLength": 255,
            "format": "uri",
            "title": "Portræt",
            "_propertyOrder": 13
        },
        "firstnames": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "description": "Alle fornavne i korrekt rækkefølge",
            "title": "Fornavne",
            "_propertyOrder": 2
        },
        "birthname": {
            "type": "string",
            "title": "Pigenavn (født)",
            "description": "Det eller de efternavne som vedkommende havde før giftemål.",
            "maxLength": 255,
            "_propertyOrder": 3
        },
        "lastnames": {
            "type": "array",
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "title": "Mellem- og efternavne",
            "description": "Alle nuværende mellem og efternavne i korrekt rækkefølge",
            "_propertyOrder": 4
        },
        "gender": {
            "type": "string",
            "enum": ["mand", "kvinde", "ukendt"],
            "title": "Køn",
            "description": "Selvforklarende",
            "_propertyOrder": 5
        },
        "occupation": {
            "type": "array",
            "description": "Bør være en brance-betegnelse fra DB07",
            "items": {
                "type": "string",
                "maxLength": 255
            },
            "uniqueItems": true,
            "title": "Erhverv",
            "_propertyOrder": 6
        },
        "from_date": {
            "type": "string",
            "format": "date",
            "maxLength": 255,
            "title": "Fødselsdato (åååå-mm-dd)",
            "pattern": "^([0-9]{4})(-([0-9]{2}))?(-([0-9]{2}))?$",
            "_propertyOrder": 7
        },
        "place_of_birth": {
            "type": "string",
            "maxLength": 255,
            "title": "Fødselssted",
            "_propertyOrder": 10
        },
        "to_date": {
            "type": "string",
            "format": "date",
            "maxLength": 255,
            "title": "Dødsdato (åååå-mm-dd)",
            "pattern": "^([0-9]{4})(-([0-9]{2}))?(-([0-9]{2}))?$",
            "_propertyOrder": 8
        },
        "place_of_death": {
            "type": "string",
            "maxLength": 255,
            "title": "Dødssted",
            "_propertyOrder": 11
        },
        "ext_data": {
            "type": "object",
            "title": "Udvided metadata",
            "properties": {
                "original_id": {
                    "type": "string",
                    "maxLength": 255,
                    "title": "Originalt ID"
                },
                "place_of_education": {
                    "type": "string",
                    "maxLength": 255,
                    "title": "Uddannelsessted"
                },
                "year_of_graduation": {
                    "type": "string",
                    "pattern": "^[0-9]{4}$",
                    "title": "Uddannelsesår"
                }
            },
            "_propertyOrder": 12
        },
        "relations": {
            "type": "array",
            "title": "Relationer",
            "items": {
                "$ref": "https://almanak.github.io/schemas/relation.json"
            },
            "_propertyOrder": 16
        }
    }
}

