{
    "id": "https://almanak.github.io/schemas/relation.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Relation",
    "description": "Skema for relationer. Udvidelse af base.json",
    "allOf": [
        {
            "$ref": "base.json"
        },
        {
            "properties": {
                "relation_class": {
                    "type": "string",
                    "maxLength": 255,
                    "title": "Relationsklasse",
                    "description": "Den klasse, som relationen tilhører"
                },
                "relation_name": {
                    "type": "string",
                    "maxLength": 255,
                    "title": "Relationsnavn",
                    "description": "Navnet på relationstypen"
                },
                "label": {
                    "type": "string",
                    "maxLength": 255,
                    "title": "Displaynavn",
                    "description": "Den streng, som entiteten repræsenteres med"
                },
                "subject_id": {
                    "type": "string",
                    "title": "Resourcespecifik ID",
                    "description": "9-cifret løbenummer specifikt for resourcetypen",
                    "maxLength": 9,
                    "pattern": "^[0-9]{9}$"
                },
                "subject_type": {
                    "type": "string",
                    "title": "Objektets ressourcetype",
                    "enum": ["events", "organisations", "people", "places", "concepts", "literal"]
                },
                "object_id": {
                    "type": "string",
                    "title": "Resourcespecifik ID",
                    "description": "9-cifret løbenummer specifikt for resourcetypen",
                    "maxLength": 9,
                    "pattern": "^[0-9]{9}$"
                },
                "object_type": {
                    "type": "string",
                    "title": "Ressourcetype",
                    "enum": ["events", "organisations", "people", "places", "concepts", "literal"]
                },
                "start_date": {
                    "type": "string",
                    "format": "date",
                    "title": "(åååå-mm-dd)",
                    "pattern": "^([0-9]{4})(-([0-9]{2}))?(-([0-9]{2}))?$"
                },
                "end_date": {
                    "type": "string",
                    "format": "date",
                    "title": "(åååå-mm-dd)",
                    "pattern": "^([0-9]{4})(-([0-9]{2}))?(-([0-9]{2}))?$"
                },
                "active_date": {
                    "type": "string",
                    "format": "date",
                    "title": "Aktiv på tidspunkt (åååå-mm-dd)",
                    "pattern": "^([0-9]{4})(-([0-9]{2}))?(-([0-9]{2}))?$"
                },
                "sources": {
                    "type": "array",
                    "items":{
                        "type": "string"
                    }
                }
            }
        }
    ]
}
